<!DOCTYPE html>
<html>
<head>
  <title>BookRanking</title>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="<%= root_path %>"><div class="logo"></div></a>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to 'BAZA KSIĄŻEK', books_path %></li>
        <li><%= link_to 'BAZA AUTORÓW', authors_path %></li>

      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user && current_user.admin? %>
            <li class="nick"><%= link_to "admin panel", root_path %></li>
        <% end %>
        <% if current_user %>
            <li class="nick"><%= link_to current_user.username, root_path %></li>

            <li><%= link_to 'Wyloguj', logout_path, method: 'delete' %></li>
        <% else %>
            <li><%= link_to 'Zaloguj', login_path %></li>
            <li><%= link_to 'Zarejestruj', signup_path %></li>
        <% end %>
      </ul>


    </div>
  </div>
</nav>



<%= yield %>

<footer>
  <div class="footer footer-container">
    <div class="container">
      <div class="row">
        <div class="col-sm-4 col-md-4 col-lg-4"><p class="footer-left">www.mól-książkowy.pl</p></div>
        <div class="col-sm-4 col-md-4 col-lg-4"><p class="footer-center"></p></div>
        <div class="col-sm-4 col-md-4 col-lg-4"><p class="footer-right">All Rights Reserved, 2015</p></div>
      </div>
    </div>
  </div>
</footer>

</body>
</html>
