
<div class="container view">
  <div class="row mt30" >
    <%= form_for(@user) do |f| %>
        <div class=""><%= f.text_field :username, :placeholder => "Nazwa użytkownika", class:"col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3" %></div>
        <div class=""><%= f.password_field :password, :placeholder => "Hasło", class:"mt15 col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3" %></div>

        <% if current_user && current_user.admin? %>
            <div class=""><%= f.email_field :email,:placeholder => "E-mail", class:"mt15 col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3" %></div>
            <div class=""><%= f.text_field :role,:placeholder => "Rola", class:"mt15 col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3" %></div>
        <% end %>


        <%= f.submit "Edytuj",class:"col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 text-center btn-red" %>
    <% end %>


    <%= link_to user_path(@user) do %>
        <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 text-center btn-red">Powrót</div>
    <% end %>
  </div>
</div>