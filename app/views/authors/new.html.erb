<%= form_for @author, html: { multipart: true } do |f| %>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :surname %>
    <%= f.text_field :surname %>
    <%= f.label :country %>
    <%= f.text_field :country %>
    <%= f.submit "Dodaj autora",class:"btn-submit" %>
<% end %>

