<div class="container new">
<%= form_for @author, html: { multipart: true } do |f| %>
    <%= f.label :image %>
     <%= f.file_field :image , :style => "color:#fff"%>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :surname %>
    <%= f.text_field :surname %>
    <%= f.label :country %>
    <%= f.text_field :country %>
    <%= f.submit "Dodaj autora",class:"btn-submit" %>
<% end %>
</div>
