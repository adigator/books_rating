<%= @author.name %>
<%= @author.surname %>
<%= image_tag( @author.image.url, {:alt => 'author_photo_' + @author.id.to_s }) %>

<%= @author.country %>
<% @books.each do |book| %>
    <%= link_to book.title, book_path(book) %>
<% end %>
<% if current_user && current_user.admin? %>
    <%= link_to "Edytuj", edit_author_path(@author), :class => "gugu"  %>
    <%= link_to "Usun", @author, :method => :delete, :data => {:confirm => "czy na pewno?"}, :class => "gugu"  %>
<% end %>