<div class="container view book-view">
  <div class="row book-row">
    <div class="col-lg-4 text-center">
      <%= image_tag(@author.image.url, {:alt => 'author_' + @author.id.to_s, :style => "max-height: 350px; max-width:300px;" }) %>

    </div>
    <div class="col-lg-8">
      <div class="col-xs-12" style="font-size: 50px;word-break: break-all;"><%= @author.name %> <%= @author.surname %></div>

      <div class="col-xs-12 b-s-a">
        <div class="col-xs-3 text-left" style="padding-left:0px;">
          <span style="line-height: 28px;">Dzieła: </span>
        </div>
        <div class="col-xs-9">
        <% @author.books.each do |aut| %>
            <%= link_to aut.title, book_path(aut) %>
        <% end %>
        </div>
      </div>
      <div class="col-xs-12"><div class="col-xs-3 text-left" style="padding-left:0px">Kraj: </div>
        <div class="col-xs-9"><%= @author.country %></div></div>
    </div>

    <% if current_user && current_user.admin? %>
        <div class="col-xs-12" style="margin-top:20px;">
          <div class="col-xs-4 col-xs-offset-1 btn-red text-center"><%= link_to "Edytuj", edit_author_path(@author)  %></div>
          <div class="col-xs-4 col-xs-offset-2 btn-red text-center"><%= link_to "Usuń", @author, :method => :delete, :data => {:confirm => "czy na pewno?"} %></div>
        </div>
    <% end %>

  </div>



</div>