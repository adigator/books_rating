<% @books.each do |book| %>
    <%= link_to book.title, book_path(book) %>
    <%= image_tag(book.image.url(:medium), {:alt => 'movie_cover_' + book.id.to_s }) %>
    <%= book.year %>
    <%= book.publisher %>
    <%= book.genre %>
    <%= book.cober %>
    <%= book.description %>
    <%= book.rating %>
    <%= book.country %>
<% end %>
